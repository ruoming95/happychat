<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.happychat.mapper.ChatSessionMapper">

	<!--实体映射-->
	<resultMap id="base_result_map" type="com.happychat.entity.pojo.ChatSession">
		<!--会话ID-->
		<result column="session_id" property="sessionId"/>
		<!--最后接受的消息-->
		<result column="last_message" property="lastMessage"/>
		<!--最后接受消息时间毫秒-->
		<result column="last_receive_time" property="lastReceiveTime"/>
	</resultMap>

	<!--通用查询结果列-->
	<sql id="base_column_list">
		session_id,last_message,last_receive_time
	</sql>

	<!--基础查询条件-->
	<sql id="base_query_condition">
		<if test="query.sessionId != null and query.sessionId != ''">
			and session_id = #{query.sessionId}
		</if>
		<if test="query.lastMessage != null and query.lastMessage != ''">
			and last_message = #{query.lastMessage}
		</if>
		<if test="query.lastReceiveTime != null">
			and last_receive_time = #{query.lastReceiveTime}
		</if>
	</sql>

	<!--扩展的查询条件-->
	<sql id="base_query_condition_extend">
		<if test="query.sessionIdFuzzy != null and query.sessionIdFuzzy != ''">
			and session_id like concat('%',#{query.sessionIdFuzzy},'%')
		</if>
		<if test="query.lastMessageFuzzy != null and query.lastMessageFuzzy != ''">
			and last_message like concat('%',#{query.lastMessageFuzzy},'%')
		</if>
	</sql>

	<!--通用查询条件-->
	<sql id="query_condition">
		<where>
			<include refid="base_query_condition"/>
			<include refid="base_query_condition_extend"/>
		</where>
	</sql>

	<!--查询列表-->
	<select id="selectList" resultMap="base_result_map">
		select
		<include refid="base_column_list"/>
		from chat_session
		<include refid="query_condition"/>
		<if test="query.orderBy != null">order by ${query.orderBy}</if>
		<if test="query.simplePage != null">limit #{query.simplePage.start}, #{query.simplePage.end}</if>
	</select>

	<!--查询数量-->
	<select id="selectCount" resultType="java.lang.Integer">
		select count(1)
		from chat_session
		<include refid="query_condition"/>
	</select>

	<!--插入（匹配有值的字段）-->
	<insert id="insert" parameterType="com.happychat.entity.pojo.ChatSession">
		insert into chat_session
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.sessionId != null">
				session_id, 
			</if>
			<if test="bean.lastMessage != null">
				last_message, 
			</if>
			<if test="bean.lastReceiveTime != null">
				last_receive_time, 
			</if>
		</trim>
		values
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.sessionId != null">
				#{bean.sessionId}, 
			</if>
			<if test="bean.lastMessage != null">
				#{bean.lastMessage}, 
			</if>
			<if test="bean.lastReceiveTime != null">
				#{bean.lastReceiveTime}, 
			</if>
		</trim>
	</insert>

	<!--插入或者更新-->
	<insert id="insertOrUpdate" parameterType="com.happychat.entity.pojo.ChatSession">
		insert into chat_session
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.sessionId != null">
				session_id, 
			</if>
			<if test="bean.lastMessage != null">
				last_message, 
			</if>
			<if test="bean.lastReceiveTime != null">
				last_receive_time, 
			</if>
		</trim>
		values
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.sessionId != null">
				#{bean.sessionId}, 
			</if>
			<if test="bean.lastMessage != null">
				#{bean.lastMessage}, 
			</if>
			<if test="bean.lastReceiveTime != null">
				#{bean.lastReceiveTime}, 
			</if>
		</trim>
		<trim prefix="ON DUPLICATE KEY UPDATE" suffixOverrides=",">
			<if test="bean.lastMessage != null">
				last_message = VALUES(last_message), 
			</if>
			<if test="bean.lastReceiveTime != null">
				last_receive_time = VALUES(last_receive_time), 
			</if>
		</trim>
	</insert>

	<!--批量插入-->
	<insert id="insertBatch" parameterType="com.happychat.entity.pojo.ChatSession">
		insert into chat_session(session_id,last_message,last_receive_time) values 
		<foreach collection="list" item="item" separator=",">
			(#{item.sessionId},#{item.lastMessage},#{item.lastReceiveTime}) 
		</foreach>
	</insert>

	<!--批量插入或更新-->
	<insert id="insertOrUpdateBatch" parameterType="com.happychat.entity.pojo.ChatSession">
		insert into chat_session(session_id,last_message,last_receive_time) values 
		<foreach collection="list" item="item" separator=",">
			(#{item.sessionId},#{item.lastMessage},#{item.lastReceiveTime}) 
		</foreach>
		ON DUPLICATE KEY UPDATE session_id = VALUES(session_id),last_message = VALUES(last_message),last_receive_time = VALUES(last_receive_time)
	</insert>

	<!--多条件更新-->
	<update id="updateByParam" parameterType="com.happychat.entity.pojo.ChatSession">
		update chat_session
		<set>
			<if test="bean.sessionId != null">
				session_id = #{bean.sessionId}, 
			</if>
			<if test="bean.lastMessage != null">
				last_message = #{bean.lastMessage}, 
			</if>
			<if test="bean.lastReceiveTime != null">
				last_receive_time = #{bean.lastReceiveTime}, 
			</if>
		</set>
		 <include refid="query_condition"/>
	</update>



	<!--根据SessionId查询-->
	<select id="selectBySessionId" resultMap="base_result_map">
		select
		<include refid="base_column_list"/>
		from chat_session where session_id = #{sessionId}
	</select>



	<!--根据SessionId更新-->
	<update id="updateBySessionId" parameterType="com.happychat.entity.pojo.ChatSession">
		update
		 chat_session
		<set>
			<if test="bean.sessionId != null">
				session_id = #{bean.sessionId},
			</if>
			<if test="bean.lastMessage != null">
				last_message = #{bean.lastMessage},
			</if>
			<if test="bean.lastReceiveTime != null">
				last_receive_time = #{bean.lastReceiveTime},
			</if>
		</set>
		where session_id = #{sessionId}
	</update>



	<!--根据SessionId删除-->
	<delete id="deleteBySessionId">
		delete
		from chat_session
		where session_id = #{sessionId}
	</delete>

</mapper>